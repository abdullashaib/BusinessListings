<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="@color/blueSky" />
            <gradient android:angle="-90" android:startColor="@color/Beige" android:endColor="@color/White"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="@color/blueSky" />
            <solid android:color="@color/White"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="@color/blueSky" />
            <gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="@color/Beige" />
        </shape>
    </item>

</selector>