<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_location_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="abdullashaib.social.com.businesslistings.LocationPicker">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/place_intro_text"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/place_intro_text"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/btGetPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Get Places At Your Area"
        android:layout_marginTop="130dp"
        android:background="@drawable/button_border"/>

    <Button
        android:id="@+id/btSearchPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Search A Place"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_border"
        android:onClick="searchLocation"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvPlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btGetPlace"
        android:layout_marginTop="80dp"
        android:text="Place Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPlaceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlaceName"
        android:text="Place Address"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPlacePhonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlaceName"
        android:text="Place Phone Number"
        android:layout_marginTop="45dp"
        android:textSize="16sp"
        android:visibility="gone" />

    <WebView
        android:id="@+id/wvAttribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Attribution"
        android:textSize="16sp" />



</RelativeLayout>
