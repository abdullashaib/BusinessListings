<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="abdullashaib.social.com.businesslistings.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blackModified"
            android:paddingTop="0dp"
            android:paddingBottom="20dp"
            android:id="@+id/textView"
            android:text="All fields are required"
            android:layout_gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="First Name"
            android:id="@+id/text_firstname"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textColor="@color/blackModified"
            android:background="@drawable/edit_text_style"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Last Name"
            android:ems="10"
            android:id="@+id/text_lastname"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textColor="@color/blackModified"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Phone Number"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/text_phonenumber"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:inputType="textEmailAddress"
            android:hint="Email Address"
            android:ems="10"
            android:id="@+id/text_email"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:id="@+id/text_password"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:id="@+id/text_cnpassword"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />


        <Spinner
            android:id="@+id/account_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:entries="@array/account_arrays"
            android:prompt="@string/account_prompt"
            android:background="@drawable/edit_text_style"
            />


        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Register"
            android:id="@+id/button_register"
            android:fontFamily="sans-serif"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/roundedge_button"
            android:textColor="@color/Black"
            android:layout_gravity="center"
            android:onClick="registerNewUser"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Login"
            android:id="@+id/button_login"
            android:layout_toRightOf="@id/button_register"
            android:fontFamily="sans-serif"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/roundedge_button"
            android:textColor="@color/Black"
            android:onClick="loginPage"
            android:layout_gravity="center"
            />

    </LinearLayout>


</ScrollView>
