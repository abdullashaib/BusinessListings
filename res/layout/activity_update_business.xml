<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="abdullashaib.social.com.businesslistings.UpdateBusiness">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please fill all required * fields"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BE_business_id"
            android:visibility="gone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Business Name *"
            android:id="@+id/BE_business_name"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:textColor="@color/blackModified"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:id="@+id/BE_business_description"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:lines="5"
            android:scrollHorizontally="false"
            android:hint="About Your Story *"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:fontFamily="sans-serif"
            android:textColor="@color/blackModified"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Website URL"
            android:inputType="textUri"
            android:ems="10"
            android:id="@+id/BE_business_website"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:inputType="textEmailAddress"
            android:hint="Email Address *"
            android:ems="10"
            android:id="@+id/BE_business_email"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:inputType="textEmailAddress"
            android:hint="Phone Number *"
            android:ems="10"
            android:id="@+id/BE_business_phone"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Business Address"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/BE_business_address"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="City"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/BE_business_city"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Province/State"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/BE_business_state"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Postal Code"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/BE_business_postalcode"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Country"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/BE_business_country"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackModified"
            android:fontFamily="sans-serif"
            android:background="@drawable/edit_text_style"
            />


        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Update Business"
            android:id="@+id/BE_business_update_button"
            android:fontFamily="sans-serif"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="@drawable/roundedge_button"
            android:textColor="@color/Black"
            android:layout_gravity="center"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Back"
            android:id="@+id/BE_home_button"
            android:fontFamily="sans-serif"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:background="@drawable/roundedge_button"
            android:textColor="@color/Black"
            android:layout_gravity="center"
            />
    </LinearLayout>


</ScrollView>
